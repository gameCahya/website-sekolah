---
import { sanityClient } from "../../lib/sanity";

interface Stat {
  _id?: string;  // â† Tambah optional
  order: number;
  value: string;
  label: string;
  icon?: string;
  isActive?: boolean;  // â† Tambah optional
}

const stats = await sanityClient.fetch<Stat[]>(
  `*[_type == "stats" && isActive == true] | order(order asc) [0...4]`
);

