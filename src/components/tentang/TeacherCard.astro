---
// src/components/tentang/TeacherCard.astro
// Individual teacher card component

interface Props {
  name: string;
  position: string;
  subject?: string;
  photo?: string;
  description?: string;
  colorScheme?: 'primary' | 'secondary' | 'tertiary';
}

const {
  name,
  position,
  subject,
  photo,
  description,
  colorScheme = 'primary'
} = Astro.props;

const colorClasses = {
  primary: 'from-primary-500 to-primary-600',
  secondary: 'from-secondary-400 to-secondary-500',
  tertiary: 'from-tertiary-500 to-tertiary-600'
};

const gradientClass = colorClasses[colorScheme];
---

<div class="teacher-card relative bg-white dark:bg-gray-900 rounded-3xl shadow-xl hover:shadow-2xl transition-all duration-500 overflow-hidden border border-gray-100 dark:border-gray-800 h-full transform hover:-translate-y-2">
  
  <!-- Background Glow -->
  <div class="absolute top-0 right-0 w-40 h-40 bg-gradient-to-br from-primary-100 to-transparent dark:from-primary-900/20 rounded-full blur-3xl opacity-50 group-hover:opacity-100 transition-opacity duration-500"></div>
  
  <!-- Header with Photo -->
  <div class={`relative bg-gradient-to-br ${gradientClass} p-8 pt-12`}>
    <div class="relative">
      <div class="absolute inset-0 bg-white/30 rounded-full blur-2xl"></div>
      
      {photo ? (
        <img 
          src={photo} 
          alt={name}
          class="relative w-36 h-36 rounded-full mx-auto object-cover shadow-2xl border-4 border-white/50 group-hover:scale-110 transition-transform duration-500"
        />
      ) : (
        <div class="relative w-36 h-36 bg-white/20 backdrop-blur-md rounded-full mx-auto flex items-center justify-center text-7xl shadow-2xl border-4 border-white/50 group-hover:scale-110 transition-transform duration-500">
          ðŸ‘¤
        </div>
      )}
    </div>
    
    <!-- Decorative Dots -->
    <div class="absolute top-4 right-4 flex gap-1">
      <div class="w-2 h-2 bg-white/40 rounded-full"></div>
      <div class="w-2 h-2 bg-white/40 rounded-full"></div>
      <div class="w-2 h-2 bg-white/40 rounded-full"></div>
    </div>
  </div>
  
  <!-- Content -->
  <div class="relative p-8">
    <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-2 group-hover:text-primary-600 dark:group-hover:text-primary-400 transition-colors">
      {name}
    </h3>
    
    <div class={`inline-block px-4 py-1 rounded-full text-sm font-semibold mb-3 bg-gradient-to-r ${gradientClass} text-white`}>
      {position}
    </div>
    
    {subject && (
      <div class="flex items-center gap-2 mb-4">
        <span class="text-2xl">ðŸ“š</span>
        <span class="text-sm font-medium text-gray-600 dark:text-gray-400">
          {subject}
        </span>
      </div>
    )}
    
    {description && (
      <p class="text-gray-600 dark:text-gray-400 leading-relaxed">
        {description}
      </p>
    )}
    
    <div class={`mt-6 h-1 w-16 bg-gradient-to-r ${gradientClass} rounded-full group-hover:w-full transition-all duration-500`}></div>
  </div>
</div>

<style>
  .teacher-card:hover {
    transform: translateY(-8px) scale(1.02);
  }
</style>