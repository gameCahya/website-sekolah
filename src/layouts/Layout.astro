---
// src/layouts/Layout.astro
import '../styles/global.css';
import HeaderSection from '../components/Layouts/HeaderSection.astro';
import FooterSection from '../components/Layouts/FooterSection.astro';

interface Props {
  title?: string;
}

const { title = 'ABBS Surakarta' } = Astro.props;
---

<!DOCTYPE html>
<html lang="id">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-gray-50 text-gray-800 dark:bg-gray-900 dark:text-gray-200 transition-colors duration-300">
    
    <HeaderSection />
    
    <main>
      <slot />
    </main>

    <FooterSection />
    
  </body>
</html>
